#!/bin/bash

# Check if the script is run as root
if [ "$(id -u)" -ne 0 ]; then
    echo "This script must be run as root" 1>&2
    exit 1
fi

. /etc/libre-workspace/portal/portal.conf

# Activate the virtual environment
if [ -f /var/lib/libre-workspace/portal/venv/bin/activate ]; then
    source /var/lib/libre-workspace/portal/venv/bin/activate
fi

# If the number of arguments is not equal to 1, then exit
if [ "$#" -ne 1 ]; then
    echo "Illegal number of parameters"
    echo "Usage: $0 <name>"
    exit 1
fi

echo $CLEANED_DATA

cd /usr/lib/libre-workspace/portal/
python3 manage.py shell -c "from idm.oidc_provider_settings import remove_oidc_provider_client; remove_oidc_provider_client('$1');"